<div class="form-horizontal">
  <%= form_for(@pizza) do |f| %>
  
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.collection_check_boxes(:topping_ids, Topping.all, :id, :name, include_hidden: false) %>
  </div>

  <p>Don't see your toppings? Add them <a href="<%= new_topping_path %>">here</a> first.</p>
  
    <%= f.submit class: "btn btn-primary" %>

  <% end %>  
</div>
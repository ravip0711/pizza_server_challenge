<div class="text-left title">
  <h1>Pizza Server Shop</h1>
  <%= link_to "Add Pizza", new_pizza_path, class: "btn btn-danger" %>
  <%= link_to "View Toppings", toppings_path, class: "btn btn-warning" %>
</div>

<div>
  <h2>Current Pizza List:</h2>
    <ul>
    <% @pizzas.each do |pizza| %>
      <li>
        <h3><%= pizza.name %></h3>
        <h5>Description: <%= pizza.description %></h5>
        <%= link_to "Edit", edit_pizza_path(pizza) %>
        <%= link_to 'Delete', pizza, method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
      <hr>
    <% end %>
    </ul>
</div>
